Host ec2gpua1
    HostName 54.169.15.31
    User ec2-user
    IdentityFile /Users/yihyap/Documents/awskey/sg-aws-sandbox-keypair.pem
    ProxyCommand none
    LocalForward 8889 localhost:8889
    LocalForward 6006 localhost:6006

